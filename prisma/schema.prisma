// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// Cricket News Article model for SEO-optimized storage
model NewsArticle {
  id              String   @id @default(cuid())
  slug            String   @unique
  
  // Categorization for multi-sport support
  sport           String   // "cricket", "football", "tennis", etc.
  category        String?  // "news", "match-report", "analysis", etc.
  
  // Content
  title           String
  description     String?  @db.Text
  content         String?  @db.Text
  imageUrl        String?
  thumbnailUrl    String?  // High-quality image from article page
  publishedTime   String?
  
  // Source tracking (generic for all sports)
  sourceUrl       String   @unique
  sourceId        String   @unique
  sourceName      String   // "Cricbuzz", "ESPN", "Goal.com", etc.
  
  // SEO
  metaTitle       String?
  metaDesc        String?
  
  // Tags & Relations
  tags            String[]
  relatedArticles Json?
  embeddedTweets  String[]  // Twitter/X tweet IDs embedded in article
  embeddedInstagram String[] // Instagram post/reel IDs embedded in article
  
  // Timestamps
  scrapedAt       DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relation to enhanced content
  enhancedContent EnhancedContent?
  
  // Indexes for efficient querying
  @@index([sport, createdAt(sort: Desc)])
  @@index([sport, category])
  @@index([slug])
  @@index([sourceId])
  @@map("news_articles")
}

// Enhanced content generated by ChatGPT for SEO optimization
// Separate table for cleaner separation and optional enhancement
model EnhancedContent {
  id              String   @id @default(cuid())
  
  // Link to original article (one-to-one)
  articleId       String   @unique
  article         NewsArticle @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  // Enhanced SEO content (all in markdown format)
  title           String   // SEO-optimized headline (60 chars max)
  content         String   @db.Text  // Full markdown article (300-500 words)
  metaDescription String   // SEO meta description (155 chars max)
  keyTakeaways    String[] // 3-5 key bullet points
  
  // Processing status
  status          String   @default("completed") // completed | failed
  
  // Twitter posting tracking
  tweetedAt       DateTime?  // When article was tweeted (null = not tweeted)
  tweetId         String?    // Twitter post ID for reference
  
  // Timestamps
  createdAt       DateTime @default(now())
  
  @@index([articleId])
  @@index([createdAt(sort: Desc)])
  @@index([tweetedAt])
  @@map("enhanced_content")
}
